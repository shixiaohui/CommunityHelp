<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88323232"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Audio" >

    <Button
        android:id="@+id/audio_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:text="语音录制" />

    <Button
        android:id="@+id/audio_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/audio_start"
        android:layout_alignBottom="@+id/audio_start"
        android:layout_centerHorizontal="true"
        android:text="停止" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/audio_stop"
        android:layout_alignBottom="@+id/audio_stop"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/audio_stop"
        android:text="Chronometer" />

</RelativeLayout>