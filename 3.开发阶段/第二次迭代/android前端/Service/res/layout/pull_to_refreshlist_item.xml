<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
            	
	    <ImageView 
	        android:layout_margin="5dp"
	        android:id="@+id/imageItem1"
	        android:layout_width="50dp"
	        android:layout_height="50dp"/>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
		    
		    <TextView 
		        android:id="@+id/nameItem1"
		        android:textSize="20sp"
		        android:layout_marginTop="5dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
	        
		    <TextView
		        android:id="@+id/timeItem1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/orange"
		        android:textSize="12sp" />

	    </LinearLayout>
	    
    </LinearLayout>

 	<TextView 
        android:id="@+id/contentItem1"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
	    android:layout_height="100dp"/>
 	
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="35dp"
    	android:orientation="horizontal"
    	android:background="@drawable/messagebottom">
	    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        
		<Button
		    android:id="@+id/assistBut1"
		    android:layout_width="20dp"
		    android:layout_height="22dp"
		    android:layout_marginTop="5dp"
		    android:layout_weight="0"
		    android:background="@drawable/messagesearch"
		    android:text=""
		    android:textSize="12sp" />

		<TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>

	</LinearLayout>
	
</LinearLayout>
